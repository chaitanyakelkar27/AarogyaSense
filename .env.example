# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret (generate a strong random string for production)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="dev-secret-change-in-production"

# Twilio Configuration (for SMS and Voice alerts)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Demo ASHA Worker Phone Number (for testing alerts)
# This should be a valid phone number in E.164 format (e.g., +91XXXXXXXXXX)
DEMO_ASHA_PHONE=""

# Optional: Production Database (PostgreSQL/MySQL)
# Uncomment and configure for production deployment
# DATABASE_URL="postgresql://user:password@localhost:5432/aarogya"

# Optional: Redis URL (for caching and job queues)
# REDIS_URL="redis://localhost:6379"

# Optional: AWS S3 (for file uploads)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_S3_BUCKET=""
# AWS_REGION="us-east-1"

# Optional: Email Configuration (for notifications)
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""

# Optional: Sentry (for error tracking)
# SENTRY_DSN=""

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=""

# Groq Configuration (AI Health Assistant - FREE)
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY=""
GROQ_MODEL="llama-3.1-8b-instant"

# Pusher Configuration (for real-time SOS alerts)
# Get these from https://dashboard.pusher.com
# Required for SOS feature to work on Vercel
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="ap2"